# ===========================================
# APPLICATION PROPERTIES EXAMPLE
# ===========================================
# Copier ce fichier vers src/main/resources/application.properties
# et modifier les valeurs selon votre environnement

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Configuration for PostgreSQL
spring.datasource.url=jdbc:postgresql://localhost:5432/poseidon
spring.datasource.username=your_db_username
spring.datasource.password=your_db_password
spring.datasource.driver-class-name=org.postgresql.Driver

# ===========================================
# JPA/HIBERNATE CONFIGURATION
# ===========================================
# Options: create, create-drop, validate, update, none
spring.jpa.hibernate.ddl-auto=create-drop
spring.jpa.show-sql=true

# PostgreSQL Dialect
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true

# ===========================================
# DATA INITIALIZATION
# ===========================================
# Initialize data after schema creation
spring.jpa.defer-datasource-initialization=true
# Options: always, never, embedded
spring.sql.init.mode=always

# ===========================================
# SERVER CONFIGURATION
# ===========================================
server.port=8080

# ===========================================
# ENVIRONMENT VARIABLES (RECOMMENDED)
# ===========================================
# Vous pouvez utiliser des variables d'environnement pour plus de sécurité :
#
# Database Configuration:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=poseidon
# DB_USERNAME=your_username
# DB_PASSWORD=your_password
#
# JPA Configuration:
# JPA_DDL_AUTO=create-drop
# JPA_SHOW_SQL=true
# SQL_INIT_MODE=always
#
# Server Configuration:
# SERVER_PORT=8080
#
# Ensuite utilisez la syntaxe : ${VARIABLE_NAME:default_value}
# Exemple : spring.datasource.url=jdbc:postgresql://${DB_HOST:localhost}:${DB_PORT:5432}/${DB_NAME:poseidon}


